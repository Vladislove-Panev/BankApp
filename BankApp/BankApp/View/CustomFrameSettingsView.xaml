<?xml version="1.0" encoding="UTF-8"?>
<Frame xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BankApp.View.CustomFrameSettingsView"
             CornerRadius="10"
             x:Name="FrameSettings">
    <StackLayout Orientation="Horizontal">
        <Label Text="{Binding Path=LabelText, Source={x:Reference Name=FrameSettings}}"
               FontSize="15"
               VerticalOptions="Center"
               TextColor="{DynamicResource AppMainColor}"
               FontAttributes="Bold"/>
        <Switch HorizontalOptions="EndAndExpand"/>
    </StackLayout>
</Frame>